<header>
  
  <br></br>
  
  <% for image in @location.images %>	
	 <%= link_to image_tag(image.image.url(:thumb)), image.image.url(:large) %> 		 
	 <% end %>
  
  <h2> Epic Holidays in <%= @location.name %>  </h2>  
  
 <br></br>
 
 
</header>
 
             
        
    <br></br>
  
    
   <% for trip in @location.trips %> 
    
    <div class="span6">
      <ul class="thumbnails">
        <li class="span6">
          <div class="trip">
             <div class="caption">
              <h3><%= link_to trip.title, trip %> </h3>
              <p><%= trip.location %>  </p>
             <div class="price">        
             <p class="pull-right">  <h3> <%= trip.price %> </h3> /week  </p>
             
            </div>
          </div>

             <% medium_url = trip.medium_url %>
    	       <% if medium_url %>
    	       <%= image_tag medium_url %>
             <% end %>           
        </li>        
      </ul>
    </div>
    
   <% end %>
    
    
    <div style="clear:both;"></div>
    
   

 
 
 <br></br>
 
<% if signed_in? %>
<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
 <% end %>