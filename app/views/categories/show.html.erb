<header class="jumbotron subhead" id="overview">  
  <h1 style ="color:#000;"> Epic <%= @category.name %> Holidays  </h1>      
</header>
 
 
 <div class="border"> 
     
  
   <div style="clear:both;"></div>
           
   <br></br>
   
        
   
    
   <% for trip in @category.trips %> 
    
    <div class="span6">
      <ul class="thumbnails">
        <li class="span6">
          <div class="trip">
             <div class="caption">
              <h3><%= link_to trip.title, trip %> </h3>
              <p><%= trip.location %>  </p>
             <div class="price">        
             <p class="pull-right">  <h3> <%= trip.price %> </h3> /week  </p>
             
            </div>
          </div>

             <% medium_url = trip.medium_url %>
    	       <% if medium_url %>
    	       <%= image_tag medium_url %>
             <% end %>           
        </li>        
      </ul>
    </div>
    
   <% end %>
    
   
    
    <div style="clear:both;"></div>
    
   
 </div>
 
 
 <br></br>
 
