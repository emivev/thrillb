<h1>Listing packages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price1</th>
    <th>Price2</th>
    <th>Price3</th>
    <th>Price4</th>
    <th>Price5</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.name %></td>
    <td><%= package.description %></td>
    <td><%= package.price1 %></td>
    <td><%= package.price2 %></td>
    <td><%= package.price3 %></td>
    <td><%= package.price4 %></td>
    <td><%= package.price5 %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

